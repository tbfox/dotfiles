{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "background": "#353c4a",
                    "foreground": "#5eead4",
                    "style": "plain",
                    "template": "\uf015 "
                },
                {
                    "background": "#2e3440",
                    "foreground": "#2dd4bf",
                    "properties": {
                        "style": "unique"
                    },
                    "style": "diamond",
                    "template": " {{ .Path }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "path"
                },
                {
                    "background": "#242933",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#353c4a{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#2a303c{{ end }}",
                        "{{ if gt .Ahead 0 }}#2e3440{{ end }}",
                        "{{ if gt .Behind 0 }}#2e3440{{ end }}"
                    ],
                    "foreground": "#22d3ee",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#fbbf24{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f87171{{ end }}",
                        "{{ if gt .Ahead 0 }}#7dd3fc{{ end }}",
                        "{{ if gt .Behind 0 }}#7dd3fc{{ end }}"
                    ],
                    "properties": {
                        "branch_template": "{{ trunc 25 .Branch }}",
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "branch_icon": "\uE0A0 ",
                        "branch_identical_icon": "\u25CF"
                    },
                    "style": "diamond",
                    "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "git"
                },
                {
                    "background": "#2a303c",
                    "foreground": "#ffa726",
                    "powerline_symbol": "\ue0b0",
                    "style": "diamond",
                    "template": " \uf0ad ",
                    "trailing_diamond": "\ue0b0",
                    "type": "root"
                },
                {
                    "background": "#353c4a",
                    "background_templates": [
                        "{{ if gt .Code 0 }}#2a303c{{ end }}"
                    ],
                    "foreground": "#34d399",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#f87171{{ end }}"
                    ],
                    "style": "diamond",
                    "template": " {{ .Code }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "status"
                }
            ]
        },
        {
            "alignment": "left",
            "newline": true,
            "type": "prompt",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#5eead4",
                    "template": "\u279c"
                }
            ]
        }
    ],
    "console_title_template": "{{ .Folder }}",
    "final_space": true,
    "version": 3
}
